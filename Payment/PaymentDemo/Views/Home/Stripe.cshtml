@{
    ViewBag.Title = "Stripe";
}
<h2>@ViewBag.Title</h2> 

<div class="row">
    <div class="col-md-12">
        <script src="https://js.stripe.com/v3/"></script>

        <form action="/home/stripe" method="post" id="payment-form">
            <div class="form-group">
                <label>Amount</label>
                <input type="number" class="form-control" name="amount" placeholder="Amount" value="0.50" >
            </div>
            <div class="form-row">
                <label for="card-element">
                    Credit or debit card
                </label>
                <div id="card-element">
                    <!-- a Stripe Element will be inserted here. -->
                </div>

                <!-- Used to display form errors -->
                <div id="card-errors" role="alert"></div>
            </div>
            <br />
            <button class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
<script src="~/Scripts/stripe-pay.js"></script>
